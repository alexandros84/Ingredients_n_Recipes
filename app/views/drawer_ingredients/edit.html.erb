<h1>Rename <%= @drawer_ingredient.ingredient_name %>:</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for ([@drawer, @drawer_ingredient]) do |f| %>

      <%= f.label :ingredient_name %>
      <%= f.text_field :ingredient_name, class: 'form-control' %>

      <%= f.submit "Rename ingredient", class: "btn btn-primary" %>
    <% end %>
    
    </div>
</div>