<h1>Add an ingredient to your inventory:</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for ([@drawer, @drawer_ingredient]) do |f| %>

      <%= f.label :ingredient_name %>
      <%= f.text_field :ingredient_name, class: 'form-control' %>
      
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: 'form-control' %>

      <%= f.submit "Create ingredient", class: "btn btn-primary" %>
    <% end %>
    
    </div>
</div>