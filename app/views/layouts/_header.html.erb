<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Ingredients n' Recipes!", root_path, id: "logo" %><%= link_to ": More than just Ingredients!", root_path, id: "logo2" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" style="padding-top: 6px;">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
            <% if logged_in? %>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Inventory", edit_user_drawer_path(current_user, current_user.drawers.first) %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>